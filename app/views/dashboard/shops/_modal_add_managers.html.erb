<div class="modal fade" id="manager_of_shop">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal_header">
        <button type="button" class="close" data-dismiss="modal"
          aria-hidden="true">&times;</button>
        <h4 class="modal-title modal_text_header"><%= t "set_manage_for_shop" %></h4>
      </div>
      <div class="modal-body padding-bottom-0">
        <div class="row">
          <div class="search_users text-center">
            <%= t "btn_search" %>
            <%= text_field_tag :user_by_shop_domain, nil,
              placeholder: t("name_or_email"), class: "form-control inline" %>   
            <%= hidden_field_tag :shop_id, @shop.id %>
            <span class="filter-user-by-shop-domain-label"><%= t "domain" %></span>
            <%= select_tag "filter-user-by-shop-domain",
              options_for_select(shop_domain_select @shop),
              class: "filter-user-by-shop-domain form-control inline" %>
          </div>
        </div>
        <div class="row">
          <div class="panel panel-success">
            <div class="add-user-table">
              <table class="table table-striped table-hover table-bordered">
                <thead class="">
                  <tr>
                    <th></th>
                    <th class="td-user-name-table"><%= t "admin.users.index.name" %></th>
                    <th class="td-user-action-table"><%= t "admin.users.index.actions" %></th>
                  </tr>
                </thead>
                <tbody id="list_users"></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer margin_0">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "order_statistics.done" %>
        </button>
      </div>
    </div>
  </div>
</div>
