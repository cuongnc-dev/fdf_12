<div class="line">
  <div class="unit7">
    <div class="m-panel pad-50">
      <div class="aligner-c" id="product_preview">
        <%= image_tag @product.image.url, class: "set-image" %>
      </div>
    </div>
    <div class="a-divider--hidden"></div>
    <div class="share-product">
      <%= social_share_button_tag @product.name %>
    </div>
    <div class="fb-like" data-href="<%= request.original_url %>"
    data-layout="standard" data-action="like"></div>
    <div class="a-divider--hidden"></div>
    <div class="bordered rounded bg-eb-white">
      <%= render "shared/comments", object: @product, comment: @comment,
        comments: @comments %>
    </div>
  </div>
  <div class="unit5">
    <div class="m-panel pad-50">
      <% if !(current_user.domains.include? @domain) %>
        <h3 class="lead margin-zerob">
          <strong>
            <%= @product.name %>
            <% if Time.now.is_between_short_time?(@product.start_hour,
              @product.end_hour) || !@product.shop.active? ||
              @product.shop.status_on_off == Settings.shop_status_off %>
              <%= link_to t("blank_link"), class: "btn btn_add_to_cart btn-add
                padding-left-for-button disabled" do %>
                <span class="glyphicon glyphicon-shopping-cart"></span>
                <%= t "cart.add_to_card" %>
              <% end %>
            <% else %>
              <%= link_to cart_path(@product.id), remote: true,
                method: :put, class: "btn btn_add_to_cart btn-add
                padding-left-for-button" do %>
                <span class="glyphicon glyphicon-shopping-cart"></span>
                <%= t "cart.add_to_card" %>
              <% end %>
            <% end %>
          </strong>
        </h3>
      <% else %>
        <h3 class="lead margin-zerob">
          <div class="show_product_name">
            <strong>
            <%= @product.name %>
            </strong>
          </div>
          <div class="show_product_price">
            <%= format_price @product.price %>
          </div>
          <div class="mar-bottom-20">
            <h3 class="show_product_time">
              <span class="glyphicon glyphicon-time"></span>
              <div class="time_start"><%= l @product.start_hour, format: :short_time %></div>
              <%= " - " %>
              <div class="time_end"><%= l @product.end_hour, format: :short_time %></div>
            </h3>
          </div>
          <% if Time.now.is_between_short_time?(@product.start_hour,
            @product.end_hour) || !@product.shop.active? ||
            @product.shop.status_on_off == Settings.shop_status_off ||
            !(@product.shop.domains.include?(@domain) && @product.active?) %>
            <%= link_to t("blank_link"), class: "btn btn_add_to_cart btn-add
              padding-left-for-button disabled btn_margin_none" do %>
              <span class="glyphicon glyphicon-shopping-cart"></span>
              <%= t "cart.add_to_card" %>
            <% end %>
            <%= link_to t("blank_link"), class: "btn btn_add_to_cart btn-add
              padding-left-for-button disabled btn_center" do %>
              <span class="glyphicon glyphicon glyphicon-check"></span>
              <%= t "cart_quick.order_now" %>
            <% end %>
          <% else %>
            <%= link_to cart_path(@product.id), remote: true, method: :put,
              class: "btn btn_add_to_cart btn-add padding-left-for-button
              btn_margin_none" do %>
              <span class="glyphicon glyphicon-shopping-cart"></span>
              <%= t "cart.add_to_card" %>
            <% end %>
            <%= link_to "#modal_order_now", data: {toggle: "modal", product: @product},
              class: "btn btn_add_to_cart btn-add padding-left-for-button
              btn_modal_order_now btn_center" do %>
              <span class="glyphicon glyphicon glyphicon-check"></span>
              <%= t "cart_quick.order_now" %>
            <% end %>
          <% end %>
        </h3>
      <% end %>
      <div class="a-divider--fit"></div>
      <div class="mar-bottom-20">
        <p><%= @product.description %></p>
      </div>
    </div>
    <div class="m-panel m-panel-item col-md-12 col-sm-12 col-xs-12">
      <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-5">
          <span class="shop-thumbnail">
            <%= image_tag @product.shop_avatar.url, class: "image_show_all_products" %>
          </span>
        </div>
        <div class="col-md-8 col-sm-6 col-xs-7">
          <h3>
            <%= link_to @product.shop_name, @product.shop,
              class: "lead padd-left-products" %>
          </h3>
          <p class="padd-left-products">
            <%= t "common.product_number",
              number: @product.shop.products.size %>
          </p>
        </div>
      </div>
      <div class="m-panel__content">
        <div class="line">
          <% @product.shop.products.each do |product| %>
            <div class="unit3">
              <% if @domain.present? %>
                <%= link_to domain_product_path(@domain, product) do %>
                  <span class="product-thumbnail">
                    <%= image_tag product.image.url, alt: product.name,
                      class: "product-show" %>
                  </span>
                <% end %>
              <% else %>
                <%= link_to product_path(product, domain_id: "not_find") do %>
                  <span class="product-thumbnail">
                    <%= image_tag product.image.url, alt: product.name,
                      class: "product-show" %>
                  </span>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="a-divider--fit"></div>
        <div class="unit">
          <% if @domain.present? %>
            <%= link_to t("common.btn_view_all"), domain_shop_path(@domain, @product.shop),
              class: "btn btn-success btn-block" %>
          <% else %>
            <%= link_to t("common.btn_view_all"), domain_shop_path(@product.shop,
              domain_id: "not_find"), class: "btn btn-success btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "domains/modal_order_fast" %>
