<%= simple_form_for [:dashboard, @shop, @product] do |f| %>
  <%= render "shared/error_messages", object: @product %>
   <div class="form-group">
      <%= f.label t "new_product.category" %>
      <%= f.select :category_id,
        @categories.collect {|category| [category.name, category.id]},
          {}, {class: "form-control"} %>
        </div>
  <div class="form-group">
    <%= f.label t "new_product.name" %>
    <%= f.text_field :name, placeholder: t(".product_name"),
      error: t(".product_name_error") , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t "new_product.description" %>
    <%= f.text_area :description, placeholder: t(".product_description"),
      error: t(".product_description_error"), class: "form-control content_note" %>
  </div>
  <div class="form-group">
    <%= f.label t "new_product.price" %>
    <%= f.number_field :price, placeholder: t(".product_price"),
      error: t(".product_price_error"), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t "new_product.start_hour" %>
    <%= f.time_select :start_hour,  minute_step: 5 %>
    <%= f.label t "new_product.end_hour" %>
    <%= f.time_select :end_hour,  minute_step: 5 %>
  </div>
  <div class="form-group">
    <%= f.input :status, collection: Product.statuses.keys, selected: :active,
      label_html: {class: "padding-right-for-button"} %>
  </div>
  <div class="form-group">
    <%= f.label t "new_product.image" %>
    <%= image_tag @product.image.url, class: "avatar pd_top_10px defaut-size" %>
    <%= f.file_field :image, accept: Settings.pictures.accepted_files,
      class: "upload_img" %>
  </div>
  <% if @domain.present? %>
    <%= f.hidden_field :domain_id, value: @domain.id %>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= link_to t("common.back_button"), :back, class: "btn btn-warning" %>
  <%= f.submit yield(:submit_button),
    class: "btn btn-primary space-top-submit" %>
<% end %>
