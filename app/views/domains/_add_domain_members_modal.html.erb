<div id="domain-member-modal-<%= domain.id %>" role="dialog"
  class="modal fade domain-member" data-domain="<%= domain.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal_header">
        <button type="button" class="close" data-dismiss="modal"
          aria-hidden="true">&times;</button>
        <h4 class="modal-title modal_text_header">
          <%= t "manage_user_domain", name: domain.name %>
        </h4>
      </div>
      <div class="modal-body">
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#1-<%= domain.id %>" data-toggle="tab">
              <%= t "add_domain_users" %>
            </a>
          </li>
          <li>
            <a href="#2-<%= domain.id %>" data-toggle="tab">
              <%= t "manage_domain_users" %>
            </a>
          </li>
          <li class="float-right">
            <div class="form-group search-domain-user">
              <%= text_field_tag :user_domain_search,
                params[:user_domain_search],
                placeholder: t("search_domain_user"), class: "form-control",
                data: {domain: domain.id},
                onkeyup: "search_domain_user(this)"  %>
            </div>
          </li>
        </ul>
        <div class="tab-content ">
          <div class="tab-pane active" id="1-<%= domain.id %>">
            <div class="manager-domain">
              <table class="table table-striped table-hover table-bordered">
                <tbody id="list-users-<%= domain.id %>"></tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane" id="2-<%= domain.id %>">
            <div class="manager-domain">
              <table class="table table-striped table-hover table-bordered">
                <tbody id="list-added-users-<%= domain.id %>"></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer margin_0">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "order_statistics.done" %>
        </button>
      </div>
    </div>
  </div>
</div>
