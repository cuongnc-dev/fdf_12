<table class="table table-bordered">
  <thead>
    <tr>
      <th class="text-center"><%= t "oder.id" %></th>
      <th class="text-center"><%= t "oder.name" %></th>
      <th class="text-center"><%= t "oder.image" %></th>
      <th class="text-center"><%= t "oder.quantity" %></th>
      <th class="text-center"><%= t "order_quick.note" %></th>
      <th class="text-center width_status"><%= t "oder.status" %></th>
      <th class="width_price text_right"><%= t "oder.price" %></th>
    </tr>
  </thead>
  <tbody>
    <% order_products.each_with_index do |item, index| %>
      <tr id="<%= item.product_id %>">
        <td class="text-center v-a-middle"><%= index + 1 %></td>
        <td class="text-center v-a-middle"><%= item.product.name %></td>
        <td class="width_image text-center">
          <span>
            <%= image_tag item.product.image.url, class: "image_box" %>
          </span>
        </td>
        <td class="text-center v-a-middle"><%= item.quantity %></td>
        <td class="text-center v-a-middle"><%= item.notes %></td>
        <td class="text-center v-a-middle">
          <%= status_order_product item if item.try(:status).present? %></td>
        <td class="right v-a-middle">
          <strong><%= format_price item.total_price %></strong>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
