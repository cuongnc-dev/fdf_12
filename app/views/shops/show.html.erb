<div class="row">
  <div class="shop_image_cover_and_avatar">
    <div class="image_cover">
      <%= image_tag @shop.cover_image.url, class: "defaut-pic-cover" %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-3">
      <%= image_tag @shop.avatar.url, class: "avatar",
        id: "img-avatar" %>
    </div>
    <div class="col-md-9 col-sm-9 col-xs-9">
      <h1 class="title mg-bottom-0" title="<%= @shop.name %>">
        <%= @shop.name %>
      </h1>
      <% if @shop.pending? %>
        <%= render "shared/shop_status_label", shop: @shop %>
      <% else %>
        <div id="rate-star" class="col-xs-3">
          <%= rating_for @shop, Settings.rate, enable_half: true,
            disable_after_rate: false %>
        </div>
      <% end %>
      <marquee direction="left" class="text-description" scrollamount=5>
        <%= @shop.description %>
      </marquee>
    </div>
  </div>
  <div class="col-sm-12 col-md-12 col-xs-12 text-center pd_top_10px">
    <div class="general_info">
      <div class="col-sm-6 col-md-3 col-xs-6">
        <div class="general_item">
          <div class="col-sm-4 col-md-4 col-xs-4 padding-0">
            <i class="material-icons general_icon">store</i>
          </div>
          <div class="col-sm-8 col-md-8 col-xs-8 padding-right-0 padding-left-0">
            <div class="general_number">
              <%= check_shop_on_off @shop %>
            </div>
            <%= t "general_info.total.order_pending" %>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-3 col-xs-6">
        <div class="general_item">
          <div class="col-sm-4 col-md-4 col-xs-4 padding-0">
            <i class="material-icons general_icon">backup</i>
          </div>
          <div class="col-sm-8 col-md-8 col-xs-8 padding-right-0 padding-left-0">
            <div class="general_number"><%= @shop.orders.size %></div>
            <%= t "general_info.total.orders" %>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-3 col-xs-6">
        <div class="general_item">
          <div class="col-sm-4 col-md-4 col-xs-4 padding-0">
            <i class="material-icons general_icon">restore</i>
          </div>
          <div class="col-sm-8 col-md-8 col-xs-8 padding-right-0 padding-left-0">
            <div class="general_number">
              <%= l @shop.time_auto_reject, format: :short_time %>
            </div>
            <%= t "general_info.reject_order_auto" %>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-3 col-xs-6">
        <div class="general_item">
          <div class="col-sm-4 col-md-4 col-xs-4 padding-0">
            <i class="material-icons general_icon">storage</i>
          </div>
          <div class="col-sm-8 col-md-8 col-xs-8 padding-right-0 padding-left-0">
            <div class="general_number">
              <%= @shop.products.size %>
            </div>
            <%= t "general_info.total.products" %>
          </div>
        </div>
        </div>
    </div>
  </div>
</div>
<!-- body -->
<div class="block-shop-header clearfix">
  <div>
  <h2 class="section_title margin_right_15px row_h2">
    <%= @products.any? ? t(".products") : t(".no_product") %>
  </h2>
  </div>
  <div class="magin_top_10px">
      <%= render @products %>
  </div>
  <%= paginate @products %>
</div>
<!-- modals -->
<%= render "domains/modal_order_fast" %>
